{
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "extensions.autoUpdate": false,
    "json.schemaDownload.enable": false,
    "extensions.autoCheckUpdates": false,
    "git.ignoreLegacyWarning": true,
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.fontWeight": "normal",
    "editor.fontLigatures": false,
    "git.enableSmartCommit": true,

    "editor.bracketPairColorization.enabled": false,
    "editor.tokenColorCustomizations": {
        "variables": "#ffffff",
        "functions": "#e5c4ff",
        "textMateRules": [
            {
                "scope": [
                    "constant.other.net.systemverilog"
                ],
                "settings": {
                    "foreground": "#ffffff"
                }
            },
            {
                "scope": [
                    "storage.type.function.systemverilog",
                    "storage.type.class.systemverilog",
                    "keyword.control.systemverilog",
                    "keyword.other.systemverilog"
                ],
                "settings": {
                    "foreground": "#fffb82",
                    "fontStyle": "bold"
                }
            },

            {
                "scope": [ 
                    "storage.type.user-defined.systemverilog",
                    "entity.name.type.class.systemverilog",
                    "support.type.scope.systemverilog"
                ],
                "settings": {
                    "foreground": "#ffd1d1"
                }
            },
            {
                "scope": [ 
                    "source.systemverilog"
                ],
                "settings": {
                    "foreground": "#fffb82"
                }
            },
            // {
            //     "scope": [
            //         "entity.name.function.systemverilog",
            //         "support.function.port.systemverilog"
            //     ],
            //     "settings": {
            //         "foreground": "#e5c4ff"
            //     }
            // },
            {
                "scope": [
                    "invalid.unimplemented.todo.systemverilog"
                ],
                "settings": {
                    "foreground": "#ff0000",
                    "fontStyle": "bold"
                }
            }
        ]
    },
    
    "workbench.colorCustomizations": {

        "editor.findMatchHighlightBackground": "#87ff7e89",
        "editor.background": "#000000",
        "activityBar.background": "#000000",  
        "titleBar.activeBackground": "#000000",  
        "terminal.background": "#000000"  
    },
    "breadcrumbs.enabled": false,
    "editor.renderLineHighlight": "none",
    "editor.matchBrackets": "never",
    "editor.hover.enabled": false,
    "editor.fontSize": 16,
    "workbench.statusBar.visible": false,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.minimap.showSlider": "always",
    "editor.minimap.size": "fill",
    "workbench.colorTheme": "Default Dark+",
    "editor.stickyScroll.enabled": false,
    "editor.smoothScrolling": true
}
